<h1 align="center"> Listing all the users  </h1> 

<div align="center">
  <%=will_paginate%>
</div> 

<% @users.each do |user_obj|%>
  <ul class="users-list">
    <div class="row"> 
      <div class="well col-md-4 col-md-offset-4 center">

       <li> <%=link_to gravatar_for(user_obj), user_path(user_obj) %> <li>

       <li class="article-title"> 
       <%= link_to user_obj.username, user_path(user_obj)%>
       </li>
       <li> <small> <%= pluralize(user_obj.articles.count, "articles") if user_obj.articles%> </small></li>
       <% if logged_in?  and current_user.admin?  %>
          <li> <%= link_to "Delete User", user_path(user_obj), method: :delete, 
                         data: {confirm: "Are you sure you want to delete this user?"}%>
          </li>
        
         <%end%>
     </div>
    </div>
  </ul>
<%end%>
