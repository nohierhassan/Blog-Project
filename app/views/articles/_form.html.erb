<% if @article.errors.any?%>
  <ul>
   <% @article.errors.full_messages.each do |msg| %>
   <li> <%= msg %>  </li>
   <% end %>
  </ul>
<%end%>

<h1>Create new Article Here!</h1>
<%= form_for @article do |f| %>
  <p>
    <%= f.label "Title" %> <br/>
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label "Desctiption" %> <br/>
    <%= f.text_area :description%>
  </p>
  <p>
    <%= f.submit "Create"%>
  </p>
<%end%>