<h1> Listing all the articles  </h1>
<!-- Make the jumbotron class here -->
<div class = " center jumbotron">
<h1> Alpha Blog </h1>
<%= link_to "Sing UP", "#", class:"btn btn-primary btn-lg"  %>
</div>













<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  
  <% @articles.each do |article| %>
  <tr>
    <td>
      <%= article.title %>
    </td>
    <td>
      <%= article.description %>
    </td>
    <td>
      <%= link_to "Show", article_path(article) %>
    </td>
    <td>
    <%= link_to "Edit", edit_article_path(article) %>
    </td>
    <td>
    <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"} %>
    </td>
  </tr>
  <% end %>

</table>