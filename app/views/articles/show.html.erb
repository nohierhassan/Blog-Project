
<h2 align="center">The article: <%= @article.title%> </h2>
  
  <div class="well user-articles col-xs-10 col-xs-offest-2 ">
       <li> <%=link_to gravatar_for(@article.user), user_path(@article.user) %> <li>
       <li class="article-title"> 
       <%= link_to @article.user.username, user_path(@article.user)%>
       </li>
       <li> <small> <%= pluralize(@article.user.articles.count, "articles") if @article.user.articles%> </small></li>
    

    <h4 class="center description "><strong>Description:</strong> </h4>
    <hr>
    <div class="descriptionContent">
      <%= simple_format(@article.description) %> 
    </div>
   

    <div class="article-actions">
     <% if logged_in? && current_user == @article.user%>
      <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-xs btn-primary'%>
      <%= link_to "Delete this article", article_path(@article), method: :delete,
                                        data: { confirm: "Are Your Sure you wantn
                              to delete this article"}, class: "btn btn-xs btn-danger"%>
      <% end %>                        
      <%= link_to "View all Articles", articles_path, class: 'btn btn-xs btn-success'%>
      </div>
      
  </div>
  